<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#clickAbout" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <ImageView fitHeight="80.0" fitWidth="82.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/user_picture.jpg" />
                     </image>
                  </ImageView>
                  <VBox>
                     <children>
                        <Label fx:id="usernameLabel" prefHeight="13.0" prefWidth="54.0" text="Username">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="nameLabel" text="Name">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="surnameLabel" text="Surname">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox>
               <children>
                  <Label text="Your cart: ">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <ListView prefHeight="0.0" prefWidth="248.0" />
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
   <center>
      <TableView BorderPane.alignment="CENTER">
        <columns>
          <TableColumn minWidth="75.0" prefWidth="-1.0" text="Name" />
          <TableColumn minWidth="75.0" prefWidth="-1.0" text="Price" />
            <TableColumn minWidth="101.5999755859375" prefWidth="-1.0" text="Quantity (grams)" />
            <TableColumn minWidth="75.0" prefWidth="-1.0" text="Type" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button defaultButton="true" mnemonicParsing="false" prefHeight="26.0" text="Add to cart" />
          <Button mnemonicParsing="false" text="Proceed to payment" />
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
